# Makefile for building python dependent stuff

MBF_TOP := $(shell readlink -f '$(CURDIR)/..')
include $(MBF_TOP)/Makefile.common

default: mbf/defs_path.py mbf_memory
.PHONY: default

install: install-mbf_memory

mbf_memory:
	make -C mbf_memory
.PHONY: mbf_memory

clean-mbf_memory:
	make -C mbf_memory clean
.PHONY: clean-mbf_memory

install-mbf_memory:
	make -C mbf_memory install
.PHONY: install-mbf_memory

mbf/defs_path.py: ../CONFIG
	echo '# Automatically generated. DO NOT EDIT THIS FILE!!!' >$@
	echo 'HERE = "$(CURDIR)/mbf"' >>$@
	echo 'MBF_TOP = "$(MBF_TOP)"' >>$@
	echo 'DEFS = "$(MBF_TOP)/AMC525/vhd/register_defs.in"' >>$@
	echo 'SITE = "$(SITE)"' >>$@
	echo 'SITE_DIR = "$(MBF_TOP)/sites/$(SITE)"' >>$@

clean: clean-mbf_memory
	rm -f mbf/defs_path.py*
.PHONY: clean
